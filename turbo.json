{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "ts:check": {
      "dependsOn": []
    },
    "build": {
      "dependsOn": ["^ts:check"],
      "outputs": ["dist/**"]
    },
    "build:docs": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:crx": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:web": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:app": {
      "dependsOn": ["^build:web", "^build:crx"],
      "outputs": ["dist/**", "dist-crx/**"]
    },
    "build:all": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:preview": {
      "dependsOn": ["^build"],
      "outputs": ["./dist/"]
    },
    "test": {
      "dependsOn": []
    },
    "test:e2e": {
      "dependsOn": []
    },
    "dev": {
      "cache": false
    },
    "dev:crx": {
      "cache": false
    },
    "dev:deps": {
      "cache": false
    }
  }
}
