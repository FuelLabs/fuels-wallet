{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env", ".env.production"],
  "globalEnv": ["NODE_ENV", "CRX_OUT", "CRX_NAME"],
  "tasks": {
    "ts:check": {
      "dependsOn": [],
      "outputs": ["./**/*.typegen.ts"]
    },
    "build:libs": {
      "dependsOn": ["ts:check"],
      "outputs": ["dist/**"]
    },
    "build:docs": {
      "dependsOn": ["^build:libs"],
      "outputs": ["dist/**"]
    },
    "build:crx": {
      "dependsOn": ["^build:libs"],
      "outputs": ["dist-crx*/**", "dist/fuel-wallet*.zip"]
    },
    "build:web": {
      "dependsOn": ["^build:libs"],
      "outputs": ["dist/**"]
    },
    "build:app": {
      "dependsOn": ["build:web", "build:crx"],
      "outputs": ["dist/**", "dist-crx/**"]
    },
    "build:all": {
      "dependsOn": ["^build:libs"],
      "outputs": ["dist/**"]
    },
    "build:preview": {
      "dependsOn": ["^build:libs"],
      "outputs": ["./dist/"]
    },
    "test": {
      "dependsOn": ["build:libs"],
      "outputs": ["coverage/**", "test-results/**"]
    },
    "test:e2e": {
      "dependsOn": ["build:crx"],
      "outputs": ["playwright-results/**", "playwright-report/**"]
    },
    "test:e2e:crx-lock": {
      "dependsOn": ["build:crx"],
      "outputs": ["playwright-results/**", "playwright-report/**"]
    },
    "test:e2e:contracts": {
      "dependsOn": ["build:crx"],
      "outputs": ["playwright-results/**", "playwright-report/**"]
    },
    "dev": {
      "cache": false
    },
    "dev:storybook": {
      "cache": false
    },
    "dev:crx": {
      "cache": false
    },
    "dev:deps": {
      "cache": false
    },
    "dev:e2e-contracts": {
      "cache": false
    }
  }
}
