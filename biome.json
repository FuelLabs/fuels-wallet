{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "off",
        "useExhaustiveDependencies": "off",
        "noEmptyPattern": "off"
      },
      "style": {
        "useImportType": "off",
        "useEnumInitializers": "off",
        "noUnusedTemplateLiteral": "off",
        "noNonNullAssertion": "off",
        "noInferrableTypes": "off",
        "useNodejsImportProtocol": "off",
        "useNumberNamespace": "off",
        "useExportType": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noConfusingVoidType": "off",
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off",
        "noAssignInExpressions": "off",
        "noShadowRestrictedNames": "off",
        "noDoubleEquals": "off"
      },
      "complexity": {
        "noThisInStatic": "off",
        "noStaticOnlyClass": "off",
        "noForEach": "off",
        "useOptionalChain": "off",
        "noUselessSwitchCase": "off",
        "useArrowFunction": "off",
        "noUselessEmptyExport": "off",
        "useLiteralKeys": "off"
      },
      "performance": {
        "noAccumulatingSpread": "off",
        "noDelete": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "a11y": {
        "useButtonType": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5"
    }
  },
  "json": {
    "parser": {
      "allowTrailingCommas": true
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignore": [
      ".vscode",
      "**/scripts",
      "**/node_modules",
      "**/.turbo",
      "**/build",
      "**/dist",
      "**/dist-crx",
      "pnpm-lock.yaml"
    ]
  }
}
