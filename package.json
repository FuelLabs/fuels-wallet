{
  "name": "fuel-wallet",
  "version": "0.0.1",
  "private": true,
  "description": "Fuel Wallet",
  "author": "Fuel Labs <contact@fuel-ui.sh> (https://fuel.network/)",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "homepage": "https://github.com/FuelLabs/fuels-wallet#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FuelLabs/fuels-wallet.git"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/FuelLabs/fuels-wallet/issues"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:preview": "turbo run build:preview",
    "dev": "turbo run dev --parallel",
    "storybook": "pnpm -r --filter=app storybook",
    "deps:update": "updates -gu && pnpm -r exec updates -gu",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "pnpm lint:check --fix",
    "lint": "run-s lint:check prettier:check",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write .",
    "node:dev": "fuelhat node",
    "node:test": "fuelhat node --test",
    "test": "pnpm run --filter=app test",
    "test:coverage": "pnpm run --filter=app test --coverage",
    "test:clear": "pnpm -r exec jest --clearCache",
    "ts:check": "pnpm -r --filter=app exec tsc --noEmit"
  },
  "dependencies": {
    "@fuel-ui/config": "^0.4.0",
    "@fuel-ui/test-utils": "^0.4.0",
    "fuelhat": "workspace:*"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@jest/types": "^28.1.3",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "dotenv": "^16.0.1",
    "eslint": "^8.22.0",
    "fs-extra": "^10.1.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "turbo": "^1.4.3",
    "typescript": "^4.7.4",
    "updates": "^13.1.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "react",
        "react-dom"
      ],
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  }
}
